                    Grid.Column="2" 
                    Width="50" 
                    Height="20" 
                    Margin="0"
                    Padding="0 0 0 1"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Content="CHECK"
                    FontSize="10" 
