            <TextBox Name="HisTimeZoneBox" Grid.Row="6" Grid.Column="1" FontSize="10" IsReadOnly="True" HorizontalAlignment="Left" VerticalAlignment="Center" Width="240" Foreground="Green" FontWeight="DemiBold"></TextBox>
