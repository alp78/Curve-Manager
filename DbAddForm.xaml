                     HorizontalAlignment="Center"
                     Margin="0"
                     FontSize="10"
                     Height="20"
                     Width="196">
                <TextBox.Style>
                    <Style>
                        <Setter Property="TextBox.Effect">
                            <Setter.Value>
                                <DropShadowEffect Color="Black" Direction="320" ShadowDepth="3" BlurRadius="4" Opacity="0.5" />
                            </Setter.Value>
                        </Setter>
                    </Style>

                </TextBox.Style>
            </TextBox>

            <Button Name="ForecastCheckCurve" 
